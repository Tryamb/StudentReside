<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.student.BookingHostelActivity">
<TextView
    android:id="@+id/msg"
    android:visibility="gone"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:lineSpacingExtra="10dp"
    android:padding="20dp"
    android:text="@string/you_must_have_checked_images_and_videos_of_desired_pg_hostel_and_liked_them_it_is_recommended_to_talk_once_to_the_owner_on_mobile_number_provide_at_contact_section_there_are_two_ways_to_proceed_payment_n_1_offline_mode_you_can_visit_at_location_and_pay_offline_after_payment_owner_will_notify_you_it_can_be_checked_at_notification_section_once_you_click_accept_in_notified_message_you_will_be_get_listed_in_opted_pg_hostel_n_2_online_mode_you_can_pay_online_once_the_payment_is_successful_student_reside_will_send_you_notification_and_you_will_be_get_listed"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="25dp"
        style="@style/btnSolid"
        android:id="@+id/proceed_online"
        android:layout_marginTop="10dp"
        android:text="@string/proceed_online" />
    <TextView
        android:id="@+id/msgFinal"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:lineSpacingExtra="10dp"
        android:padding="20dp"
        android:text="You have made payment earlier and opted this."/>
</LinearLayout>